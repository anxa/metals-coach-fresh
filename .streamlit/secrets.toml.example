# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your credentials
# DO NOT commit secrets.toml to git!

[credentials]
username = "your_username"
password = "your_secure_password"

[api_keys]
ANTHROPIC_API_KEY = "sk-ant-api03-..."
FRED_API_KEY = "your_fred_api_key"  # Optional - for accurate real yield data

# GitHub configuration for persistent CSV storage
# Required for prediction tracking to survive Streamlit Cloud reboots
# Create a Personal Access Token at: https://github.com/settings/tokens
# Token needs 'repo' scope (Full control of private repositories)
[github]
token = "ghp_..."
repo = "username/metals-coach-fresh"  # Your GitHub repo
branch = "main"
